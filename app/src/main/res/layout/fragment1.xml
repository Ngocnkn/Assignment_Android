<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thống kê"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#228781"
            android:textSize="30dp"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thống kê thông tin thu"
            android:gravity="center"
            android:textStyle="bold"
            android:textColor="#2c579e"
            android:textSize="20dp"
            android:background="#b2b3b3"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="10"
            android:background="#2aede0">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Khoản thu"
                android:layout_weight="5"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#2c579e" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Loại Thu"
                android:layout_weight="5"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#2c579e" />

        </LinearLayout>

        <ListView
            android:id="@+id/lv_thongkethu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="10dp"></ListView>


        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Thống kê thông tin chi"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#2c579e"
                android:textSize="20dp"
                android:background="#b2b3b3"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="10"
                android:background="#2aede0">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Khoản chi"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#2c579e" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Loại chi"
                    android:layout_weight="5"
                    android:gravity="center"
                    android:textStyle="bold"
                    android:textColor="#2c579e" />

            </LinearLayout>
            <ListView
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/lv_thongkechi"></ListView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>